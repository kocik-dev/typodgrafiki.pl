{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "description": "The title of the blog post"
        },
        "date": {
            "type": "string",
            "description": "Publication date (YYYY-MM-DD)",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "description": {
            "type": "string",
            "description": "Short description of the post"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["anim", "react", "a11y", "css", "next", "web3"],
                "description": "Available tags for the post"
            },
            "minItems": 1
        }
    },
    "required": ["title", "date", "tags"]
}
